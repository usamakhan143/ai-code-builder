# ===========================================
# AI UI Builder - Environment Variables Example
# ===========================================
# Copy this file to .env and fill in your actual values

# ---------------------------
# OpenAI Configuration
# ---------------------------
# Your OpenAI API key for website generation
# Get your API key from: https://platform.openai.com/api-keys
VITE_OPENAI_API_KEY=sk-your-openai-api-key-here

# ---------------------------
# Firebase Configuration
# ---------------------------
# Firebase project configuration for authentication and Firestore
# Get these values from Firebase Console > Project Settings > Web app config

# Firebase API Key
VITE_FIREBASE_API_KEY=AIzaSy-your-firebase-api-key-here

# Firebase Auth Domain (usually: your-project-id.firebaseapp.com)
VITE_FIREBASE_AUTH_DOMAIN=your-project-id.firebaseapp.com

# Firebase Project ID
VITE_FIREBASE_PROJECT_ID=your-project-id

# Firebase Storage Bucket (usually: your-project-id.appspot.com)
VITE_FIREBASE_STORAGE_BUCKET=your-project-id.appspot.com

# Firebase Messaging Sender ID (numeric string)
VITE_FIREBASE_MESSAGING_SENDER_ID=123456789012

# Firebase App ID
VITE_FIREBASE_APP_ID=1:123456789012:web:abcdef1234567890abcdef

# ---------------------------
# Application Configuration
# ---------------------------
# Application environment (development, staging, production)
VITE_APP_ENV=development

# Application version
VITE_APP_VERSION=1.0.0

# Application name
VITE_APP_NAME=AI UI Builder

# ---------------------------
# Development Configuration
# ---------------------------
# Enable debug mode for development (true/false)
VITE_DEBUG_MODE=true

# API timeout in milliseconds
VITE_API_TIMEOUT=30000

# Maximum file size for uploads (in bytes) - 10MB default
VITE_MAX_FILE_SIZE=10485760
